<resources>

	<style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
	</style>


	<style name="ButtonStyle" parent="Theme.AppCompat.Light">
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:textColor">#FFFFFFFF</item>
		<item name="android:textSize">18sp</item>
		<item name="colorButtonNormal">#39000000</item><!--正常状态下的颜色  -->
		<item name="colorControlHighlight">#88ffffff</item><!--覆盖色，按下的颜色  -->
	</style>

	<style name="Transparent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="Transparent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
